<%- include('common/header'); %>
    <%- include('common/left_sidebar'); %>
        <div class="bg-white shadow-sm p-2 mb-4">
            <p class="p-0 py-1 m-0 fw-bold"><a href="/v1/dashboard/editor-new-assignments">New Assignments</a> <i
                    class="fa fa-angle-right fs-6 fw-bold"></i> <a
                    href="invite_reviewer?article_id=<%= article._id %>">Invite Reviewers</a> <i
                    class="fa fa-angle-right fs-6 fw-bold"></i> <span class="text-danger">Selected Reviewers</span></p>
            <div>
                <div>
                    <h6 class="fw-bold text-start m-0 p-2">Confirm reviewer selection and customize invitation letter
                        for <span class="text-success m-0">MANUSCRIPT ID: <%= article.manuscript_id %></span></h6>
                </div>
                <div>
                    <p class="m-0 p-2 fw-bold bg-light border-top border-bottom">Partially Overlapping Channel
                        Assignment under Coexistence of Bonded and Non-Bonded Channels.</p>
                    <div>
                        <p class="p-2 text-center fw-bold mt-2 m-0">Reviewers to invite</p>
                        <div class="table-responsive">
                            <table style="vertical-align: middle;" class="w-100 table table-sm">
                                <thead>
                                    <tr class="text-white" style="background-color:#2E75B5;">
                                        <td class="text-center">Name</td>
                                        <td class="text-center border-start">Role</td>
                                        <td class="text-center border-start">Letter</td>
                                        <td class="text-center border-start">Days to Review</td>
                                        <td class="text-center border-start">Donot Invite</td>
                                    </tr>
                                </thead>
                                <tbody>

                                    <% reviewers.forEach(function(reviewer){ %>
                                        <tr>
                                            <td class="text-center"><span>
                                                    <%= reviewer.name %>
                                                </span></td>
                                            <td class="border-start text-center">Reviewer</td>
                                            <td class="border-start text-center">
                                                <span class="p-0 m-0">Reviewer: Invitation to Review(dopdown)</span><br>
                                                <a href="">customize</a>
                                            </td>
                                            <td class="border-start text-center">
                                                15
                                            </td>
                                            <td class="text-center border-start">
                                                <input class="form-check-input" type="checkbox" value=""
                                                    id="flexCheckDefault" checked>
                                            </td>
                                        </tr>

                                        <%})%>
                                </tbody>
                            </table>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-outline-success btn-sm mt-3 px-5">Cancel</button>
                            <button data-bs-toggle="modal" data-bs-target="#confirmModal"
                                class="btn btn-outline-success btn-sm mt-3 px-5">Confrim Selection and Proceed</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>



        <!--Confirm Modal -->
        <div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>An email has been sent to the following reviewers notifying them of the invitations:</p>

                        <form action="" method="post">
                            <input type="hidden" name="article_id" value="<%= article._id %>">
                            <input type="hidden" name="submit" value="1">
                            <% reviewers.forEach(function(reviewer){ %>
                                <input type="hidden" name="selected_reviewers" value="<%= reviewer._id %>">
                                <p class="m-0">
                                    <%= reviewer.name %>
                                </p>
                                <%})%>
                                    <div class="mt-2 text-center">

                                        <button class="btn btn-success fw-bold" type="submit"
                                            aria-label="Close">Return</button>
                                    </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        </div>

        <%- include('common/footer'); %>