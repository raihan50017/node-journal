<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback" />

    <link rel="stylesheet" href="/static/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/dashboard-v2/dist/css/custom/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>


<body>
    <nav style="background-color: #002147;" class="p-3">
        <div class="d-flex">
            <a class="p-2 text-white" href="/">Home</a>
            <a class="p-2 text-white" href="">Contact</a>
        </div>
    </nav>
    <div class="container-fluid">
        <div class="row mt-5">
            <div class="col-md-3">

            </div>
            <div class="col-md-6">
                <% if (error.length) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                    <%} %>
                        <div class="card shadow">
                            <div style="background-color: #002147;" class="card-header; p-4"></div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-3 d-none d-md-block">
                                        <!-- <img class="w-100" alt="" src="/static/images/logo.png"> -->
                                        <h2 class="font-weight-bold text-center m-0 pt-2">Login</h2>
                                    </div>
                                    <div class="col-md-9">
                                        <form action="/v1/auth/login" method="post">
                                            <div class="input-group mb-3"><span class="input-group-text fa fa-book" id="basic-addon1"></span>
                                                <select name="journal_id" class="form-select form-select-sm" required>
                                                    <option value="">-Select Journal-</option>
                                                    <% if(locals?.journals){ journals.forEach(function(journal){ %>
                                                        <option value="<%= journal._id %>">
                                                            <%= journal.title %>
                                                        </option>
                                                        <% })} %>
                                                </select>
                                            </div>
                                            <div class="input-group mb-3">
                                                <span class="input-group-text fa fa-envelope" id="basic-addon1"></span>
                                                <input type="email" class="form-control" name="email"
                                                    placeholder="Email" aria-label="Enter email"
                                                    aria-describedby="basic-addon1">
                                            </div>

                                            <div class="input-group mb-3">
                                                <span class="input-group-text fa fa-lock fs-4" id="basic-addon1"></span>
                                                <input type="password" name="password" class="form-control"
                                                    placeholder="Password" aria-label="Enter email"
                                                    aria-describedby="basic-addon1">
                                            </div>
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="icheck-primary">
                                                        <input type="checkbox" id="remember">
                                                        <label for="remember">
                                                            Remember Me
                                                        </label>
                                                    </div>
                                                </div>
                                                <!-- /.col -->
                                                <div class="col-12">
                                                    <div
                                                        class="d-flex justify-content-center align-items-center flex-wrap">
                                                        <input type="submit" name="author" value="Author Login"
                                                            class="btn btn-secondary btn-sm m-1">
                                                        <input type="submit" name="editor" value="Editor Login"
                                                            class="btn btn-secondary btn-sm m-1">
                                                        <input type="submit" name="reviewer" value="Reviewer Login"
                                                            class="btn btn-secondary btn-sm m-1">
                                                        <input type="submit" name="admin" value="General Login"
                                                            class="btn btn-secondary btn-sm m-1">
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <span>Not registered? </span><a href="registration">Register now</a>
                                                </div>
                                                <!-- /.col-->
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
            </div>
            <div class="col-md-3">

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>